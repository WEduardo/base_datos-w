RETO SEMANAL 2 : INCREMENTO DEL SUELDO EN TANTO % Y MOSTRAR EL SUELDO ACTUAL (CON EL INCREMENTO) Y EL NORMAL


CREATE TABLE EMPLEO2(ID INTEGER, NOMBRE VARCHAR2(120), SUELDO FLOAT);

INSERT INTO EMPLEO2 VALUES(1,'EDUARDO',1000);
INSERT INTO EMPLEO2 VALUES(2,'DONOVAN',2000);
INSERT INTO EMPLEO2 VALUES(3,'ALEJANDRO',3000);
INSERT INTO EMPLEO2 VALUES(4,'PEPE',4000);
INSERT INTO EMPLEO2 VALUES(5,'TOÃ‘O',5000);



CREATE OR REPLACE PROCEDURE REPORTE_SUELDO(MI_PORCENTAJE IN FLOAT)
AS
PORCENTAJE FLOAT:= MI_PORCENTAJE;
CURSOR CURSOR_SUELDO_PORCENTAJE IS SELECT * FROM EMPLEO2;

BEGIN
  IF MI_PORCENTAJE<0 OR MI_PORCENTAJE>100 THEN
    RAISE_APPLICATION_ERROR(-20001,'EL PORCENTAJE ES INCORRECTO');
  ELSE
  DBMS_OUTPUT.PUT_LINE(' EL SUELDO DE LOS EMPLEADOS SE INCREMENTO UN ' || PORCENTAJE || '%' || '
  ');
  DBMS_OUTPUT.PUT_LINE('   EMPLEADO   ' || ' SUELDO    ' || ' SUELDO ACTUAL    ');
  
  FOR EMPLEO2 IN CURSOR_SUELDO_PORCENTAJE LOOP
      --DBMS_OUTPUT.PUT_LINE('HOLA '|| EMPLEO.NOMBRE || ' SU SUELDO ERA DE ' || EMPLEO.SUELDO || ' PERO SE LE DIO UN INCREMENTO DEL ' || PORCENTAJE || '%'|| ' SU SUELDO ACTUAL ES DE ' ||
      --((EMPLEO.SUELDO*PORCENTAJE/100) + (EMPLEO.SUELDO)));
      
DBMS_OUTPUT.PUT_LINE('  
  ' || ' ' || EMPLEO2.NOMBRE || '       ' || EMPLEO2.SUELDO || '          ' || ((EMPLEO2.SUELDO)*(PORCENTAJE/100) + (EMPLEO2.SUELDO)));
END LOOP;
END IF;
END;
/

SELECT * FROM EMPLEO2;
SET SERVEROUTPUT ON;
BEGIN
  REPORTE_SUELDO(100);
END;
/ 






